{# Flashbag #}
{% for label, messages in app.flashes %}
    <section class="container">
        {# Flashbag labels have the same names of the Bootstrap alert classes. #}
        <div class="alert alert-{{ label }} alert-dismissible fade show text-center h6 my-4" role="alert">
            {% for message in messages %}
                {# We display different icon relative to the label. #}
                <p class="text-center">
                    {{ message|raw }}
                </p>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </section>
{% endfor %}
